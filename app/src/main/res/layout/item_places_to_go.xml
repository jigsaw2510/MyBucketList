<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_place_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_place_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/icon_places_to_go" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_view_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_place_icon_container"
            android:layout_toEndOf="@id/card_view_place_icon_container"
            android:fontFamily="sans-serif-medium"
            tools:text="The place to go"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_place_name"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/card_view_place_icon_container"
            android:fontFamily="sans-serif-light"
            tools:text="Description"
            android:textColor="#888888"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>